<Page
    x:Class="PhpMyAdminConnection.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhpMyAdminConnection"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FF64B5F6">

        <StackPanel>
            <TextBlock Text="Welcome"  Foreground="#FF7986CB"  HorizontalAlignment="Center" FontSize="48"/>
            <TextBlock Text="Login" FontSize="24"  ></TextBlock>
            <TextBox x:Name="tbLogin" />
            <TextBlock Text="Password" FontSize="24"  ></TextBlock>
            <TextBox x:Name="tbPwd" />
            <StackPanel Orientation="Horizontal">
                <Button    Content="Connect" Background="#FF7986CB" Click="Button_Click" FontSize="24" FontFamily="Global User Interface"></Button>
                <TextBlock Name="phpStatus" Margin="20,10,20,0" FontSize="24"  Text="..." Foreground="#FFF9FBFD"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>