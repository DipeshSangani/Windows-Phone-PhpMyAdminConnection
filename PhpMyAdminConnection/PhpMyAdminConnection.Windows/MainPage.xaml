<Page
    x:Class="PhpMyAdminConnection.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhpMyAdminConnection"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF1565C0">
        <Border BorderThickness="1" HorizontalAlignment="Center" Height="420"  VerticalAlignment="Center" Width="709" Background="#FF64B5F6" Margin="329,186,328,162">
            <StackPanel >
                <TextBlock Text="Welcome" Margin="0,0,0,30" Foreground="#FF7986CB" FontSize="72" HorizontalAlignment="Center"/>
                <TextBlock Text="Login" Margin="60,60,60,0" FontSize="30"></TextBlock>
                <TextBox x:Name="tbLogin" Margin="60,0,60,20"/>
                <TextBlock Text="Password" Margin="60,0,60,0" FontSize="30"></TextBlock>
                <TextBox x:Name="tbPwd" Margin="60,0,60,20"/>
                <StackPanel Orientation="Horizontal">
                <Button Margin="60,0,10,20" Height="52" FontSize="28" Width="152" Content="Connect" Background="#FF7986CB" Click="Button_Click"></Button>
                    <TextBlock Name="phpStatus" Margin="60,20,10,20" FontSize="28"  Text="..." Foreground="#FFF9FBFD"/>
                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
</Page>
